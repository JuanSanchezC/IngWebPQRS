<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd">
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/pqrsdb"/>
		<property name="username" value="root" />
		<property name="password" value="root"/>
	</bean>
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource"/>
		<property name="mappingResources">
			<list>
				<value>co/edu/udea/iw/dto/Empleado.hbm.xml</value>
				<value>co/edu/udea/iw/dto/Factura.hbm.xml</value>
				<value>co/edu/udea/iw/dto/Filial.hbm.xml</value>
				<value>co/edu/udea/iw/dto/Solicitud.hbm.xml</value>
				<value>co/edu/udea/iw/dto/TipoEmpleado.hbm.xml</value>
				<value>co/edu/udea/iw/dto/TipoSolicitud.hbm.xml</value>
				<value>co/edu/udea/iw/dto/Motivo.hbm.xml</value>
				<value>co/edu/udea/iw/dto/TipoMotivo.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="java.persistence.validation.mode">none</prop>
			</props>
		</property>
	</bean>
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory"/>
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<bean id="solicitudDAO" class="co.edu.udea.iw.dao.imp.SolicitudDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="motivoDAO" class="co.edu.udea.iw.dao.imp.MotivoDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="filialDAO" class="co.edu.udea.iw.dao.imp.FilialDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="tipoSolicitudDAO" class="co.edu.udea.iw.dao.imp.TipoSolicitudDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="facturaDAO" class="co.edu.udea.iw.dao.imp.FacturaDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="empleadoDAO" class="co.edu.udea.iw.dao.imp.EmpleadoDAOImp">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="solicitudBL" class="co.edu.udea.iw.bl.SolicitudBL">
		<property name="solicitudDAO" ref="solicitudDAO"/>
		<property name="motivoDAO" ref="motivoDAO"/>
		<property name="filialDAO" ref="filialDAO"/>
		<property name="tipoSolicitudDAO" ref="tipoSolicitudDAO"/>
		<property name="facturaDAO" ref="facturaDAO"/>
	</bean>
	<tx:annotation-driven/>
</beans>
